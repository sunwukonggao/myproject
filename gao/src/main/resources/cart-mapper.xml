<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.shop.gao.mapper.CarMapper">
    <resultMap type="cn.shop.gao.domain.Cart" id="cartresultMap">
        <id property="id" column="id"/>
        <result property="good_id" column="good_id"/>
        <result property="user_id" column="user_id"/>
    </resultMap>
    <select id="findByUserAndGood" resultType="Cart">
        <![CDATA[





			select * from shop_cart where good_id=#{good_id}  and user_id=#{user_id}






        ]]>
    </select>
    <select id="updateCart" parameterType="int">
        <![CDATA[





			UPDATE  shop_good SET amount=#{amount} WHERE good_id=#{good_id}  and user_id=#{user_id}






        ]]>
    </select>
    <select id="saveCart" parameterType="int">
        <![CDATA[





			INSERT INTO shop_good SET (user_id,good_id,amount) VALUES (#{user_id),#{good_id},#{amount})






        ]]>
    </select>
</mapper>